@using Zoekjaar.Web.Models
@using Zoekjaar.Resources

@model GraduateProfileModel

<div class="headline">
	<h4>@ApplicationStrings.Skills</h4>
	<ul class="pull-right unstyled inline">
		<li><a href="#" class="btn-edit btn-edit-in-headline" data-container-selector=".template-container-skill"><i class="icon-edit"></i></a></li>
	</ul>
</div>

<div class="row-fluid template-container template-container-skill" hidden>
	<div class="controls">
		@Html.LabelFor(_ => _.Graduate.PcSkills)
		@Html.TextBoxFor(_ => _.Graduate.PcSkills, new { @class = "span12" })
		@Html.ValidationMessageFor(_ => _.Graduate.PcSkills)

		@Html.LabelFor(_ => _.Graduate.OtherSkills)
		@Html.TextBoxFor(_ => _.Graduate.OtherSkills, new { @class = "span12" })
		@Html.ValidationMessageFor(_ => _.Graduate.OtherSkills)
	</div>
<div class="controls forms-inline">
	<div class="span1 offset9">
		<button class="btn btn-warning btn-cancel" data-detail-selector=".skill-detail">@ApplicationStrings.Cancel</button>
	</div>
	<div class="span2">
		<input type="submit" class="btn-u btn-save" data-target-url="@Url.Action("SkillView")" value="@ApplicationStrings.SaveChanges" />
	</div>
</div>
</div>

<div class="row-fluid blog-page blog-item">
	<div class="span12">
		<div class="media row-container">
			<div class="media-body">
				<p data-target-element="#Graduate_PcSkills">@Html.DisplayFor(_ => _.Graduate.PcSkills)</p>
				<p data-target-element="#Graduate_OtherSkills">@Html.DisplayFor(_ => _.Graduate.OtherSkills)</p>
			</div>
		</div>
	</div>
</div>
