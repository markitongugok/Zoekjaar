@using Zoekjaar.Web.Models
@using Zoekjaar.Resources

@model GraduateProfileModel

<div class="headline">
	<h4>@ApplicationStrings.OtherLinks</h4>
	<ul class="pull-right unstyled inline">
		<li><a href="#" class="btn-edit btn-edit-in-headline" data-container-selector=".template-container-link"><i class="icon-edit"></i></a></li>
	</ul>
</div>

<div class="row-fluid template-container template-container-link" hidden>
	<div class="controls">
		@Html.LabelFor(_ => _.Graduate.LinkedIn)
		@Html.TextBoxFor(_ => _.Graduate.LinkedIn, new { @class = "span12" })
		@Html.ValidationMessageFor(_ => _.Graduate.LinkedIn)

		@Html.LabelFor(_ => _.Graduate.GooglePlus)
		@Html.TextBoxFor(_ => _.Graduate.GooglePlus, new { @class = "span12" })
		@Html.ValidationMessageFor(_ => _.Graduate.GooglePlus)
	</div>
	<div class="controls forms-inline">
		<button class="btn btn-warning btn-cancel" data-detail-selector=".link-detail">@ApplicationStrings.Cancel</button>
		<input type="submit" class="btn-u btn-save" data-target-url="@Url.Action("LinkView")" value="@ApplicationStrings.SaveChanges" />
	</div>
</div>

<div class="row-fluid blog-page blog-item">
	<div class="span12">
		<div class="media row-container">
			<div class="media-body">
				<p data-target-element="#Graduate_LinkedIn">@Html.DisplayFor(_ => _.Graduate.LinkedIn)</p>
				<p data-target-element="#Graduate_GooglePlus">@Html.DisplayFor(_ => _.Graduate.GooglePlus)</p>
			</div>
		</div>
	</div>
</div>
